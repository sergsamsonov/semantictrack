<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.bugtrack.entity.user" table="users">
        <id column="userid" name="id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property column="login" name="login" type="java.lang.String"/>
        <property column="email" name="email" type="java.lang.String"/>
        <property column="password" name="password" type="java.lang.String"/>
        <property column="firstname" name="firstname" type="java.lang.String"/>
        <property column="middlename" name="midname" type="java.lang.String"/>
        <property column="lastname" name="lastname" type="java.lang.String"/>
        <property column="enabled" name="enabledval" type="java.lang.Integer"/>
    </class>
</hibernate-mapping>